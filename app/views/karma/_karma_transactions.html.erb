<%# Local variables expected: user %>

<div class="card shadow-lg border-0 rounded-3 mt-5">
  <div class="card-body p-4 p-md-5">
    <h2 class="card-title text-center mb-4 text-primary">Your Karma History</h2>
    <% if user.karma_transactions.any? %>
      <ul class="list-group list-group-flush">
        <% user.karma_transactions.order(created_at: :desc).each do |transaction| %>
          <li class="list-group-item d-flex justify-content-between align-items-center py-3">
            <div>
              <strong><%= transaction.user.first_name %></strong>
              <%= render_karma_transaction_description(transaction) %>
            </div>
            <span class="badge bg-success rounded-pill fs-6 px-3 py-1">+<%= transaction.points_awarded %> Karma</span>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-muted text-center">No transactions recorded yet. Start contributing to earn Karma!</p>
    <% end %>
  </div>
</div>
