<%# app/views/karma/_karma_leaderboard.html.erb %>
<%# Local variables expected: top_users, user (current_user) %>

<div class="card shadow-lg border-0 rounded-3">
  <div class="card-body p-4 p-md-5">
    <h2 class="card-title text-center mb-4 text-primary">Top 10 Karma Leaders</h2>
    <% if top_users.any? %>
      <ul class="list-group list-group-flush">
        <% top_users.each_with_index do |leader, index| %>
          <li class="list-group-item d-flex justify-content-between align-items-center py-3">
            <div>
              <strong><%= index + 1 %>. <%= leader.email %></strong>
              <% if leader == user %> <%# 'user' here is the current_user %>
                <span class="badge bg-primary ms-2">You</span>
              <% end %>
            </div>
            <span class="badge bg-secondary rounded-pill fs-6 px-3 py-1"><%= leader.karma_points %> Karma</span>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-muted text-center">No Karma leaders yet. Be the first to earn points!</p>
    <% end %>
  </div>
</div>
