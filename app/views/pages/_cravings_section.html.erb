<section class="cravings-section">
  <h2>What are you craving?</h2>
  <div class="categories-list">
    <% Maker::CATEGORIES.each do |category| %>
      <div class="category-item">
        <%
          normalized_category = category.strip.downcase

          icon_class = case normalized_category
                       when "meat" then "fa-drumstick-bite"
                       when "seafood" then "fa-fish"
                       when "vegetables" then "fa-carrot"
                       when "fruits" then "fa-apple-alt"
                       when "dairy" then "fa-cheese"
                       when "other" then "fa-boxes"
                       when "drinks" then "fa-cocktail"
                       when "grains" then "fa-wheat-awn"
                       when "bakery & pastries" then "fa-bread-slice"
                       when "eggs" then "fa-egg"
                       else "fa-tag"
                       end
        %>
        <i class="fas <%= icon_class %> category-icon"></i>
        <span><%= category %></span>
      </div>
    <% end %>
  </div>
</section>
