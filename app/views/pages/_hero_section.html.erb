<header class="hero-section" data-controller="hero-video">
  <%= video_tag "hero-background-video.mp4", data: { hero_video_target: "video" },
                autoplay: true,
                loop: true,
                muted: true,
                playsinline: true,
                poster: image_path("hero-background.jpeg"),
                class: "hero-background-video" %>

  <div class="hero-content-wrapper">
    <h1>Find Local. <br><br>
    Share Local.<br><br>
    All on one map.</h1><br><br>
    <p>Find and support real farmers, artisans, and producers near you,
       shared by people like you.</p><br><br>
    <div class="hero-buttons">
      <%= link_to "Explore the Map", makers_path, class: "button-primary" %>
      <%= link_to "Recommend a Local Gem", new_maker_path, class:"button-secondary" %>
    </div>
  </div>
</header>
