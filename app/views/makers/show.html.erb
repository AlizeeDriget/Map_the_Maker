<div class="container p-3">
  <div class="index-maker-card">
          <%= cl_image_tag @maker.photos[0].key, class: "index-maker-card-photo" %>
          <div class="top-box d-flex justify-content-between align-items-center">
            <div class="name-box">
              <p class="h4 mb-1"><%= @maker.name %>  </p>
            </div>
            <div class="star-box d-flex justify-content-end">
              <%= render "shared/star_rating_overall", maker: @maker %>
            </div>
          </div>
          <div class="middle-box">
            <p class="mb-0"><%= @maker.location %></p>
          </div>
          <div class="bottom-box">
            <% @maker.categories.each do |category| %>
              <span class="category-tag"><%= category.capitalize %></span>
            <% end %>
          </div>
        </div>

  <br>
  <div class="<div class="top-box d-flex justify-content-between align-items-center>

      <h4>  <strong> Reviews <strong> </h4>
      <h4> Overall Rating <%= render "shared/star_rating_overall", maker: @maker %>  </p>
        <br>
        <p> Freshness Rating <%= render "shared/star_rating_freshness", maker: @maker %></p>
        <p> Service Rating <%= render "shared/star_rating_service", maker: @maker %></p>
        <p> Product Range Rating <%= render "shared/star_rating_product_range", maker: @maker %></p>
        <p> Accuracy Rating <%= render "shared/star_rating_accuracy", maker: @maker %></p>

  </div>

  <br>
  <div class = "container">
      <%= link_to "Share", new_maker_review_path(@maker), class:"button-primary" %>
  </div>

  <br>

  <br>
    <div class="container">
      <div class="<div class="top-box d-flex justify-content-between align-items-center>

      <h4>  <strong> <%= @maker.name %>'s Reviews  <strong> </h4>
        <p> <%= render "shared/star_rating_overall", maker: @maker %></p>

        <br>

        <h3> Reviews </h3>

        <%if @reviews.any?%>
          <% @reviews.each do |review| %>
            <div class = "review-card border rounded p-3 mb-3">


              <p>
                <strong>Rating:</strong>
                <%=render "shared/star_rating_overall", maker: review.maker%>
                <p><strong>Reviewer:<strong> <%= review.user.first_name %></p>
                <p><strong>Comment:<strong> <% review.comment %> </p>
              </p>
            </div>
          <% end %>
    <% else %>

    <p> No reviews yet for this maker.</p>
    <% end %>

      </div>
    </div>








  <br>
  <br>
  <br>
  <br>

  <div class ="align-items-center" >
    <br>
    <h2>Add a review!</h2>
    <br>
    <%= link_to "Submit", new_maker_review_path(@maker), class:"button-primary" %>
    <br>
    <br>
  </div>
  <br>
</div>
